/* pages/remide/remide.wxss */
.top{
  width: 100%;
  height: 90rpx;
  /* background: pink; */
  line-height: 90rpx;
  display: flex;
  justify-content: space-around;
  font-size: 32rpx;
}
.top text{
  flex: 1;
  text-align: center;
}
.active{
   border-bottom:5rpx solid #5E3862; 
   color: #5E3862;
   font-weight: bold;
}
.every{
  width: 100%;
  height: 358rpx;
  background: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.cont{
  background: #ECECEC;
  width: 100%;
  height: 100%;
}
.tops{
   display: flex;
   justify-content: space-between;
   margin: 20rpx 0;
}
.uesrs,.info{
  display: flex;
   margin: 20rpx 0;
  flex-direction: column;
}
.bottom{
  display: flex;
   margin: 20rpx 0;
  align-items: center;
  justify-content: space-between;
}
.bottom button{
  width: 180rpx;
  line-height: 80rpx;
  height:80rpx;
  border: 1rpx solid #5E3862;
}