/* pages/detail/detail.wxss */
.wrap{
  width:100%;
  height:100%;
  display: flex;
  flex-direction: column;
}
.list{
  width:100%;
  display: flex;
  flex-direction: column;
  padding:20rpx;
  box-sizing: border-box;
}
.list .every{
  width:100%;
  display: flex;
  margin-top:45rpx;
  margin-left:20rpx;
  box-sizing: border-box;
}
.list .every image{
  width:40%;
  height: 250rpx;
}
.list .every .word{
  display: flex;
  flex-direction: column;
  padding:20rpx;
  box-sizing: border-box;
}
.list .every .word text{
  font-size: 30rpx;
  color:#C1C1C1;
}
.nm{
  font-size:40rpx!important;
  color:#000!important;
}